#!/bin/sh

pwd="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

case "$1" in
    "sorry")
      aplay -q $pwd/paStormSounds/HAL/halsorry.wav
      ;;
    "operational")
      play -q $pwd/paStormSounds/HAL/operatnl.wav
      ;;
    "davepls")
      aplay -q $pwd/paStormSounds/HAL/dave.wav
      ;;
    "why")
      aplay -q $pwd/paStormSounds/HAL/error.wav
      ;;
    "IKNOW")
      aplay -q $pwd/paStormSounds/HAL/cantalow.wav
      ;;
    "results")
      cvlc --play-and-exit $pwd/paStormSounds/GladOS/well_done_glados.mp3
      ;;
    "-h")
      echo "one of : sorry operational davepls why IKNOW results"
      ;;
    *)
      aplay -q $pwd/paStormSounds/HAL/halsorry.wav
      exit 1
      ;;
  esac
